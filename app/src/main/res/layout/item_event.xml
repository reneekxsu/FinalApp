<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_weight="1"
        app:cardBackgroundColor="#DDEADC"
        app:cardCornerRadius="15dp"
        app:cardElevation="7dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?android:attr/selectableItemBackground">

            <TextView
                android:id="@+id/tvStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="1/14/2021" />

            <TextView
                android:id="@+id/tvEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/tvStart"
                android:fontFamily="@font/poppins"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text=" to 1/16/2021" />

            <TextView
                android:id="@+id/tvRenter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvEventCarMakeModelYear"
                android:layout_alignParentStart="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/oxygen"
                tools:text="Renter: renees" />

            <TextView
                android:id="@+id/tvCarOwner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvRenter"
                android:layout_alignParentStart="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/oxygen"
                tools:text="Owner: mackey" />

            <TextView
                android:id="@+id/tvPickUpAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvEnd"
                android:layout_alignParentStart="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp"
                android:fontFamily="@font/oxygen"
                tools:text="Pick Up Address: 4030 Manzana Lane" />

            <TextView
                android:id="@+id/tvEventCarMakeModelYear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvPickUpAddress"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/oxygen"
                tools:text="Tesla Model X 2020" />

            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvPickUpAddress"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="213dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="11dp"
                android:fontFamily="@font/noto_sans"
                android:gravity="right"
                android:text="Total Price" />

            <TextView
                android:id="@+id/tvTotalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvPrice"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="91dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="11dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/lato"
                android:gravity="right"
                android:textColor="#256826"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="$568" />

            <ImageButton
                android:id="@+id/ibtnDirections"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="9dp"
                android:layout_toEndOf="@+id/tvEnd"
                app:srcCompat="@drawable/outline_directions_24"
                app:tint="@color/colorPrimary" />
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>