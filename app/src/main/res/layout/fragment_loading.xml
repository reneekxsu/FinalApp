<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/green_gradient">

        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="29dp"
            android:layout_marginTop="105dp"
            android:fontFamily="@font/poppins"
            android:text="Welcome, "
            android:textSize="35dp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/tvYourName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvWelcome"
            android:layout_alignParentStart="true"
            android:layout_marginStart="29dp"
            android:layout_marginTop="0dp"
            android:fontFamily="@font/poppins"
            android:textSize="30dp"
            tools:text="renee!" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tvYourName"
            android:layout_marginTop="-160dp"
            app:srcCompat="@drawable/ed_logo_drawable_animation" />

        <TextView
            android:id="@+id/tvCarculatorPrompt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvYourName"
            android:layout_alignParentStart="true"
            android:layout_marginStart="44dp"
            android:layout_marginTop="340dp"
            android:fontFamily="@font/noto_sans"
            android:text="Not sure how much to charge?"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvCarculatorPrompt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvCarculatorPrompt1"
            android:layout_alignParentStart="true"
            android:layout_marginStart="44dp"
            android:layout_marginTop="6dp"
            android:fontFamily="@font/noto_sans"
            android:text="Get an estimate"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvToCarculator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvCarculatorPrompt1"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="6dp"
            android:layout_toEndOf="@+id/tvCarculatorPrompt2"
            android:fontFamily="@font/noto_sans"
            android:text=" here!"
            android:textSize="16sp"
            android:textStyle="bold" />
    </RelativeLayout>

</FrameLayout>