<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.wheeldeal">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <queries>

        <!-- Camera -->
        <intent>
            <action android:name="android.media.action.IMAGE_CAPTURE" />
        </intent>
    </queries>

    <application
        android:name="com.example.wheeldeal.models.ParseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.WheelDeal">
        <activity android:name="com.example.wheeldeal.activities.ScheduleDatesActivity"></activity>
        <activity android:name="com.example.wheeldeal.activities.EventDetailsActivity" />
        <activity android:name="com.example.wheeldeal.oldactivities.ScheduleTimesActivity" />
        <activity android:name="com.example.wheeldeal.activities.EditCarActivity" />
        <activity android:name="com.example.wheeldeal.activities.CarDetailsActivity" />
        <activity android:name="com.example.wheeldeal.activities.UserCarFeedActivity" />
        <activity android:name="com.example.wheeldeal.activities.RegisterCarActivity" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.codepath.fileprovider.FinalApp"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/fileprovider" />
        </provider>

        <activity android:name="com.example.wheeldeal.activities.SignUpActivity" />
        <activity android:name="com.example.wheeldeal.activities.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.wheeldeal.MainActivity" />
    </application>

</manifest>